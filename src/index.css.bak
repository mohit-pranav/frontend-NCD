/* ============================================
   AI TYPING INDICATOR
   ============================================ */
.ai-indicator {
    display: none;
    align-items: center;
    gap: 8px;
    margin-top: 24px;
    padding: 12px 24px;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 50px;
}

.ai-indicator.active {
    display: flex;
    animation: fadeInUp 0.3s ease;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.ai-text {
    font-size: 14px;
    font-weight: 500;
    color: rgba(168, 85, 247, 0.9);
}

.ai-dots {
    display: flex;
    gap: 4px;
}

.ai-dots .dot {
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, #a855f7, #6366f1);
    border-radius: 50%;
    animation: dotBounce 1.4s ease-in-out infinite;
}

.ai-dots .dot:nth-child(2) {
    animation-delay: 0.2s;
}

.ai-dots .dot:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes dotBounce {

    0%,
    80%,
    100% {
        transform: scale(0.8);
        opacity: 0.5;
    }

    40% {
        transform: scale(1.2);
        opacity: 1;
    }
}

