    overflow-y: auto;
}

/* ============================================
   HEADER - NEW ARCHITECTURE
   ============================================ */
.site-header-root {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 20px 48px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 1000;
    pointer-events: none;
}

.header-left,
.header-right {
    pointer-events: auto;
}

.header-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    pointer-events: auto;
    transition: all 0.4s ease;
}

.header-center.scrolled {
    top: 20px;
    padding: 14px 28px;
    border-radius: 999px;
    background: linear-gradient(135deg, #2a2a2a, #0f0f0f);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.header-logo {
    font-size: 24px;
    font-weight: 700;
    color: #fff;
    cursor: pointer;
    transition: all 0.4s ease;
    text-shadow: 0 0 20px rgba(168, 85, 247, 0.5);
    letter-spacing: -0.02em;
    opacity: 0.9;
}

.header-logo:hover {
    text-shadow: 0 0 30px rgba(168, 85, 247, 0.8), 0 0 60px rgba(99, 102, 241, 0.4);
    transform: scale(1.05);
}

.nav-menu {
    display: flex;
    gap: 28px;
}

.nav-link {
    font-size: 15px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    letter-spacing: 0.01em;
    transition: all 0.3s ease;
    padding: 8px 16px;
    border-radius: 999px;
}

.nav-link:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
}

.nav-link.active {
    color: #fff;
    background: rgba(255, 255, 255, 0.15);
    border: none;
    box-shadow: none;
}

.header-spacer {
    width: 24px;
    transition: all 0.4s ease;
}

.get-started-btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: 8px;

  padding: 10px 16px;
  border-radius: 999px;
  border: none;
  cursor: pointer;

  font-size: 14px;
  font-weight: 600;
  color: #fff;

  background: linear-gradient(
    135deg,
    #2f47b3 0%,
    #9b82b4 35%,
    #9323a0 100%
  );

  box-shadow:
    0 8px 20px rgba(29, 56, 175, 0.3),
    0 4px 10px rgba(133, 194, 20, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.35),
    inset 0 -1px 0 rgba(0, 0, 0, 0.2);

  transition: all 0.35s ease;
  background-size: 200% 200%;
  animation: gradientFlow 6s ease infinite;
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Soft outer glow */
.get-started-btn::before {
  content: "";
  position: absolute;
  inset: -2px;
  border-radius: inherit;
  background: linear-gradient(
    45deg,
    rgba(102, 126, 234, 0.8),
    rgba(118, 75, 162, 0.8),
    rgba(240, 147, 251, 0.8),
    rgba(102, 126, 234, 0.8)
  );
  filter: blur(1px);
  opacity: 0.8;
  z-index: -1;
  animation: shinyBorder 3s linear infinite;
  background-size: 300% 300%;
}

@keyframes shinyBorder {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* Hover â€” very subtle lift */
.get-started-btn:hover {
  transform: translateY(-1px);
  box-shadow:
    0 12px 28px rgba(102, 126, 234, 0.4),
    0 6px 14px rgba(118, 75, 162, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.4),
    inset 0 -1px 0 rgba(0, 0, 0, 0.3);
}

/* Press */
.get-started-btn:active {
  transform: translateY(0);
  box-shadow:
    0 6px 16px rgba(102, 126, 234, 0.3),
    0 3px 8px rgba(118, 75, 162, 0.2),
    inset 0 3px 6px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
}

/* Arrow animation */
.get-started-btn .arrow {
  display: inline-block;
  transition: transform 0.3s ease;
}

.get-started-btn:hover .arrow {
  transform: translateX(3px);
}

