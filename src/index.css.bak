/* ============================================
   VIBE - Minimal Dark with Animated BG
   ============================================ */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: #000;
    color: #fff;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: auto;
}

/* ============================================
   HEADER
   ============================================ */
.site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 48px;
    background: transparent;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Scrolled State */
.site-header.scrolled {
    padding: 16px 48px;
    background: rgba(10, 10, 15, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}

.header-logo {
    font-size: 24px;
    font-weight: 700;
    color: #fff;
    cursor: pointer;
    transition: all 0.4s ease;
    text-shadow: 0 0 20px rgba(168, 85, 247, 0.5);
    letter-spacing: -0.02em;
    opacity: 0.9;
}

.site-header.scrolled .header-logo {
    opacity: 1;
    text-shadow: 0 0 30px rgba(168, 85, 247, 0.7);
    animation: logoPulse 2s ease-in-out infinite;
}

@keyframes logoPulse {

    0%,
    100% {
        text-shadow: 0 0 20px rgba(168, 85, 247, 0.5), 0 0 40px rgba(99, 102, 241, 0.3);
        transform: scale(1);
    }

    50% {
        text-shadow: 0 0 30px rgba(168, 85, 247, 0.8), 0 0 60px rgba(99, 102, 241, 0.5);
        transform: scale(1.05);
    }
}

.header-logo:hover {
    text-shadow: 0 0 30px rgba(168, 85, 247, 0.8), 0 0 60px rgba(99, 102, 241, 0.4);
    transform: scale(1.05);
}

.nav-menu {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 6px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 50px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Nav Menu Scrolled State */
.site-header.scrolled .nav-menu {
    background: transparent;
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    border: none;
    gap: 60px;
    padding: 0;
}

.nav-link {
    font-size: 13px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    letter-spacing: 0.01em;
    transition: all 0.4s ease;
    padding: 10px 20px;
    border-radius: 50px;
}

.site-header.scrolled .nav-link {
    padding: 8px 0;
    color: rgba(255, 255, 255, 0.7);
    position: relative;
}

.site-header.scrolled .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #a855f7, #6366f1, #a855f7);
    background-size: 200% 100%;
    border-radius: 2px;
    transition: width 0.3s ease;
    animation: gradientMove 2s linear infinite;
}

@keyframes gradientMove {
    0% {
        background-position: 0% 50%;
    }

    100% {
        background-position: 200% 50%;
    }
}

.site-header.scrolled .nav-link:hover::after {
    width: 100%;
}

.nav-link:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
}

.site-header.scrolled .nav-link:hover {
    background: transparent;
    color: #fff;
}

.nav-link.active {
    color: #fff;
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.3), rgba(99, 102, 241, 0.3));
    border: 1px solid rgba(168, 85, 247, 0.3);
}

.header-spacer {
    width: 24px;
    transition: all 0.4s ease;
}

/* ============================================
   UNICORN STUDIO BACKGROUND
   ============================================ */
.unicorn-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

/* ============================================
   MAIN CONTAINER
   ============================================ */
.main-container {
    position: relative;
    z-index: 10;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
}

/* ============================================
   LOGO
   ============================================ */
.logo {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 16px;
}

.logo-text {
    font-size: 32px;
    font-weight: 700;
    letter-spacing: -0.03em;
    background: linear-gradient(135deg, #fff 0%, rgba(255, 255, 255, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
    min-height: 1.2em;
}

.logo-text::after {
    content: '|';
    background: none;
    -webkit-text-fill-color: rgba(168, 85, 247, 0.8);
    animation: cursorBlink 0.8s step-end infinite;
    margin-left: 2px;
}

.logo-text.typed::after {
    display: none;
}

@keyframes cursorBlink {

    0%,
    50% {
        opacity: 1;
    }

    51%,
    100% {
        opacity: 0;
    }
}

.logo-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: linear-gradient(135deg, #a855f7, #6366f1);
    margin-top: -12px;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.2);
        opacity: 0.8;
    }
}

/* ============================================
   TAGLINE
   ============================================ */
.tagline {
    font-size: 16px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 48px;
    letter-spacing: 0.02em;
}

/* ============================================
   PROMPT BOX
   ============================================ */
.prompt-wrapper {
    width: 100%;
    max-width: 520px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.prompt-box {
    width: 100%;
    display: flex;
    align-items: center;
    background: rgba(15, 15, 20, 0.7);
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(40px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    padding: 8px 8px 8px 28px;
    transition: all 0.4s ease;
    box-shadow:
        0 0 40px rgba(168, 85, 247, 0.15),
        0 0 80px rgba(99, 102, 241, 0.1),
        0 25px 50px rgba(0, 0, 0, 0.5),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

/* Light Sweep Animation */
.prompt-box::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg,
            transparent 0%,
            rgba(168, 85, 247, 0.03) 25%,
            rgba(168, 85, 247, 0.08) 50%,
            rgba(99, 102, 241, 0.08) 60%,
            rgba(99, 102, 241, 0.03) 75%,
            transparent 100%);
    animation: lightSweep 4s ease-in-out infinite;
    pointer-events: none;
    z-index: 1;
}

@keyframes lightSweep {
    0% {
        left: -100%;
    }

    50% {
        left: 100%;
    }

    100% {
        left: 100%;
    }
}

.prompt-box:hover {
    border-color: rgba(168, 85, 247, 0.3);
    background: rgba(15, 15, 20, 0.8);
    box-shadow:
        0 0 50px rgba(168, 85, 247, 0.25),
        0 0 100px rgba(99, 102, 241, 0.15),
        0 30px 60px rgba(0, 0, 0, 0.6),
        inset 0 1px 0 rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}

.prompt-box:focus-within {
    border-color: rgba(168, 85, 247, 0.5);
    background: rgba(15, 15, 20, 0.85);
    box-shadow:
        0 0 60px rgba(168, 85, 247, 0.35),
        0 0 120px rgba(99, 102, 241, 0.2),
        0 0 0 4px rgba(168, 85, 247, 0.15),
        0 30px 60px rgba(0, 0, 0, 0.6),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
}

.prompt-box input {
    flex: 1;
    padding: 16px 16px 16px 0;
    background: transparent;
    border: none;
    font-size: 16px;
    font-family: inherit;
    font-weight: 400;
    color: #fff;
    outline: none;
}

.prompt-box input::placeholder {
    color: rgba(255, 255, 255, 0.35);
}

.send-btn {
    width: 48px;
    height: 48px;
    border: none;
    border-radius: 12px;
    background: linear-gradient(135deg, #a855f7, #6366f1);
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
}

.send-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 30px rgba(168, 85, 247, 0.4);
}

.send-btn:active {
    transform: scale(0.98);
}

/* ============================================
   SUGGESTIONS
   ============================================ */
.suggestions {
    display: flex;
    gap: 10px;
    margin-top: 20px;
    flex-wrap: wrap;
    justify-content: center;
}

.chip {
    padding: 10px 18px;
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    font-size: 13px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 0.25s ease;
}

.chip:hover {
    background: linear-gradient(135deg, #a855f7, #6366f1);
    border-color: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(168, 85, 247, 0.3);
}

/* ============================================
   AI TYPING INDICATOR
   ============================================ */
.ai-indicator {
    display: none;
    align-items: center;
    gap: 8px;
    margin-top: 24px;
    padding: 12px 24px;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 50px;
}

.ai-indicator.active {
    display: flex;
    animation: fadeInUp 0.3s ease;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.ai-text {
    font-size: 14px;
    font-weight: 500;
    color: rgba(168, 85, 247, 0.9);
}

.ai-dots {
    display: flex;
    gap: 4px;
}

.ai-dots .dot {
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, #a855f7, #6366f1);
    border-radius: 50%;
    animation: dotBounce 1.4s ease-in-out infinite;
}

.ai-dots .dot:nth-child(2) {
    animation-delay: 0.2s;
}

.ai-dots .dot:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes dotBounce {

    0%,
    80%,
    100% {
        transform: scale(0.8);
        opacity: 0.5;
    }

    40% {
        transform: scale(1.2);
        opacity: 1;
    }
}

/* ============================================
   POWERED BY
   ============================================ */
.powered-by {
    position: absolute;
    bottom: 32px;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.3);
    letter-spacing: 0.05em;
}

/* ============================================
   RESPONSIVE
   ============================================ */
@media (max-width: 580px) {
    .prompt-wrapper {
        max-width: 100%;
        padding: 0 10px;
    }

    .prompt-box {
        padding: 4px 4px 4px 16px;
    }

    .prompt-box input {
        font-size: 15px;
        padding: 14px 12px 14px 0;
    }

    .send-btn {
        width: 44px;
        height: 44px;
    }

    .chip {
        padding: 8px 14px;
        font-size: 12px;
    }

    .tagline {
        font-size: 14px;
    }
}

/* ============================================
   ANIMATIONS
   ============================================ */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.logo {
    animation: fadeIn 0.8s ease-out;
}

.tagline {
    animation: fadeIn 0.8s ease-out 0.1s both;
}

.prompt-wrapper {
    animation: fadeIn 0.8s ease-out 0.2s both;
}

.powered-by {
    animation: fadeIn 0.8s ease-out 0.4s both;
}

/* ============================================
   TEMPLATES SECTION
   ============================================ */
.templates-section {
    position: relative;
    z-index: 10;
    padding: 100px 48px 120px;
    background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.8) 20%, rgba(0, 0, 0, 0.95) 100%);
}

.templates-header {
    text-align: center;
    margin-bottom: 60px;
}

.section-title {
    font-size: 42px;
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: 16px;
    background: linear-gradient(135deg, #fff 0%, rgba(255, 255, 255, 0.7) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.section-subtitle {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 400;
}

.templates-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 28px;
    max-width: 1200px;
    margin: 0 auto;
}

.template-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.template-card:hover {
    transform: translateY(-8px);
    border-color: rgba(168, 85, 247, 0.3);
    box-shadow:
        0 20px 60px rgba(0, 0, 0, 0.5),
        0 0 40px rgba(168, 85, 247, 0.15);
}

.template-preview {
    position: relative;
    height: 200px;
    overflow: hidden;
}

.template-image {
    width: 100%;
    height: 100%;
    transition: transform 0.4s ease;
}

.template-card:hover .template-image {
    transform: scale(1.05);
}

.template-info {
    padding: 20px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.template-info h3 {
    font-size: 16px;
    font-weight: 600;
    color: #fff;
}

.template-category {
    font-size: 12px;
    font-weight: 500;
    color: rgba(168, 85, 247, 0.9);
    background: rgba(168, 85, 247, 0.1);
    padding: 6px 12px;
    border-radius: 50px;
    border: 1px solid rgba(168, 85, 247, 0.2);
}

/* ============================================
   CURSOR GLOW EFFECT
   ============================================ */
.cursor-glow {
    position: fixed;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.15) 0%, rgba(99, 102, 241, 0.1) 30%, transparent 70%);
    pointer-events: none;
    z-index: 5;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.cursor-glow.active {
    opacity: 1;
}

/* ============================================
   FILTER TABS
   ============================================ */
.filter-tabs {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 40px;
    flex-wrap: wrap;
}

.filter-tab {
    padding: 12px 24px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-tab:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border-color: rgba(255, 255, 255, 0.2);
}

.filter-tab.active {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.3), rgba(99, 102, 241, 0.3));
    border-color: rgba(168, 85, 247, 0.4);
    color: #fff;
    box-shadow: 0 0 20px rgba(168, 85, 247, 0.2);
}

/* ============================================
   3D CARD HOVER EFFECT
   ============================================ */
.template-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
    perspective: 1000px;
}

.template-card:hover {
    transform: translateY(-8px) rotateX(5deg) rotateY(-5deg);
    border-color: rgba(168, 85, 247, 0.3);
    box-shadow:
        0 30px 60px rgba(0, 0, 0, 0.5),
        0 0 50px rgba(168, 85, 247, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

/* Card Overlay */
.card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
}

.template-card:hover .card-overlay {
    opacity: 1;
}

.preview-btn {
    padding: 14px 32px;
    background: linear-gradient(135deg, #a855f7, #6366f1);
    border: none;
    border-radius: 50px;
    color: #fff;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    transform: translateY(20px);
    opacity: 0;
}

.template-card:hover .preview-btn {
    transform: translateY(0);
    opacity: 1;
}

.preview-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(168, 85, 247, 0.4);
}

/* Hidden cards for filter */
.template-card.hidden {
    display: none;
}

/* Templates Responsive */
@media (max-width: 900px) {
    .templates-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .cursor-glow {
        display: none;
    }
}

@media (max-width: 600px) {
    .templates-section {
        padding: 60px 20px 80px;
    }

    .templates-grid {
        grid-template-columns: 1fr;
    }

    .section-title {
        font-size: 32px;
    }

    .filter-tabs {
        gap: 8px;
    }

    .filter-tab {
        padding: 10px 18px;
        font-size: 13px;
    }
}

/* Shake Animation */
@keyframes shake {

    0%,
    100% {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-6px);
    }

    75% {
        transform: translateX(6px);
    }
}

.prompt-box.shake {
    animation: shake 0.4s ease;
}

/* ============================================
   COMPONENTS PAGE
   ============================================ */
.components-page,
.templates-page {
    position: relative;
    z-index: 10;
    min-height: 100vh;
    padding: 120px 48px 80px;
    background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.9) 10%, rgba(0, 0, 0, 0.98) 100%);
}

.components-search-section,
.templates-search-section {
    max-width: 1200px;
    margin: 0 auto 32px;
    display: flex;
    align-items: center;
    gap: 20px;
}

.search-box {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 20px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.3s ease;
}

.search-box:focus-within {
    border-color: rgba(168, 85, 247, 0.4);
    background: rgba(255, 255, 255, 0.08);
}

.search-icon {
    color: rgba(255, 255, 255, 0.4);
    flex-shrink: 0;
}

.search-box input {
    flex: 1;
    background: transparent;
    border: none;
    font-size: 15px;
    color: #fff;
    outline: none;
}

.search-box input::placeholder {
    color: rgba(255, 255, 255, 0.4);
}

.search-actions {
    display: flex;
    gap: 8px;
}

.sort-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 12px 18px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.sort-btn:hover,
.sort-btn.active {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border-color: rgba(255, 255, 255, 0.2);
}

/* Category Tabs */
.category-tabs {
    display: flex;
    align-items: center;
    gap: 8px;
    max-width: 1200px;
    margin: 0 auto 40px;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    overflow-x: auto;
    flex-wrap: nowrap;
}

.category-tabs::-webkit-scrollbar {
    display: none;
}

.category-tab {
    padding: 10px 18px;
    background: transparent;
    border: 1px solid transparent;
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
}

.category-tab:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.05);
}

.category-tab.active {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
}

.tab-actions {
    margin-left: auto;
    display: flex;
    gap: 16px;
}

.tab-label {
